# Database Configuration
# Neon PostgreSQL Database - Replace with your actual connection string
DATABASE_URL=postgresql://neondb_owner:your_password@your-host.neon.tech/neondb?sslmode=require&channel_binding=require

# Server Configuration
PORT=5000
NODE_ENV=development

# Session Configuration
SESSION_SECRET=your_32_character_session_secret_here_for_development

# JWT Secret (required for production)
JWT_SECRET=your_secure_jwt_secret_at_least_32_characters_long

# Security Settings (Production)
# Generate strong secrets with: openssl rand -hex 32
# COOKIE_SECURE=true  # Set to true in production with HTTPS
# COOKIE_SAME_SITE=strict  # Set to 'strict' in production for CSRF protection
# COOKIE_DOMAIN=.yourdomain.com  # Optional: Only if using subdomains

# Clerk Authentication (optional for local development)
CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Optional: Set to 'true' to enable debug logging
DEBUG=false

# PostgreSQL individual settings (if needed)
PGHOST=ep-little-voice-aeekmg7d-pooler.c-2.us-east-2.aws.neon.tech
PGPORT=5432
PGUSER=neondb_owner
PGPASSWORD=your_neon_password
PGDATABASE=neondb

# SMTP Configuration for Email (Admin Features)
# For Brevo (recommended free option):
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_brevo_login_email@example.com
SMTP_PASS=your_brevo_smtp_key_here
# For Gmail (alternative):
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_gmail@gmail.com
# SMTP_PASS=your_app_password_here

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:5000

# WordPress Blog Configuration
# WordPress REST API URL (e.g., https://yourdomain.com/wp-json/wp/v2)
VITE_WORDPRESS_API_URL=https://your-wordpress-site.com/wp-json/wp/v2